<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.fengmap.indoorPosition.widget.NavigationBar
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="@string/demo_title_basemap">
    </com.fengmap.indoorPosition.widget.NavigationBar>


    <com.fengmap.android.map.FMMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navigation_bar"/>

    <Button
        android:id="@+id/get_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实时定位"
        android:onClick="getPosition"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/map_info"
        android:layout_toEndOf="@+id/map_info" />


    <Button
        android:id="@+id/map_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地图信息"
        android:onClick=""
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/choose_algorithm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="chooseAlgorithm"
        android:text="算法选择"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/clear_tag"
        android:layout_toStartOf="@+id/clear_tag"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Button
        android:id="@+id/clear_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空标记"
        android:onClick="clearTag"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
